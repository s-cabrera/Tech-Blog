<form class="login-form card border border-secondary rounded p-3 col-md-6 m-auto">
    <h4 class="form-group card-header bg-white">Login Form</h4>
    <div class="card-body">
        <div class="form-group col-auto">
            <label for="login-username">Username
                <span class="text-danger font-weight-bold d-none">*</span>
            </label>
            <input type="email" class="form-control" id="login-username" placeholder="jane_doe">
        </div>
        <div class="form-group col-auto">
            <label for="login-password">Password
                <span class="text-danger font-weight-bold d-none">*</span>
            </label>
            <input type="password" class="form-control" id="login-password" placeholder="********">
        </div>
        <p id="login-alert"class="form-group col-auto text-danger d-none">Alert message HERE!!!</p>
        <div class="form-group position-relative p-3 mb-2">
            <button type="submit" class="btn btn-primary btn-centered">Login</button>
        </div>
    </div>
</form>

<script src="/js/login.js"></script>
{{!-- Print out the general dashboard --}}
{{#each posts as |post|}}
<div class="card mb-3">
    
    <h4 class="card-header">{{post.title}}
        <a href="/api/posts/post/{{post.id}}"  class="btn btn-outline-secondary view-btn ml-2">View</a>
        <span class="post_header p-1">Posted by
            <span class="post_author">{{post.user.username}}</span>
            on
            <span class="post_date">{{format_date post.updated_at}}</span>
        </span>
    </h4>
    <div class="card-body">
        <p>{{post.content}}</p>
    </div>
</div>
{{/each}}